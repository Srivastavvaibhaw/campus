<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create College</title>
</head>
<body>
    <h1>Create New College</h1>
    <form action="/admin/addnewcollege" method="POST" novalidate>
        <!-- College Name -->
        <div>
            <label for="name">College Name</label>
            <input type="text" id="name" name="college[name]" required>
        </div>

        <!-- College Type -->
        <div>
            <label for="type">Type</label>
            <input type="text" id="type" name="college[type]" required>
        </div>

        <!-- Category -->
        <div>
            <label for="category">Category</label>
            <input type="text" id="category" name="college[category]">
        </div>

        <!-- Established Year -->
        <div>
            <label for="estyear">Established Year</label>
            <input type="number" id="estyear" name="college[estyear]">
        </div>

        <!-- Country -->
        <div>
            <label for="country">Country</label>
            <input type="text" id="country" name="college[country]" required>
        </div>

        <!-- Location -->
        <div>
            <label for="state">State</label>
            <input type="text" id="state" name="college[location][state]" required>
        </div>
        <div>
            <label for="city">City</label>
            <input type="text" id="city" name="college[location][city]" required>
        </div>
        <div>
            <label for="address">Address</label>
            <input type="text" id="address" name="college[location][address]">
        </div>
        <div>
            <label for="code">Postal Code</label>
            <input type="number" id="code" name="college[location][code]">
        </div>

        <!-- Coordinates -->
        <div>
            <label for="latitude">Latitude</label>
            <input type="number" step="any" id="latitude" name="college[coordinates][latitude]">
        </div>
        <div>
            <label for="longitude">Longitude</label>
            <input type="number" step="any" id="longitude" name="college[coordinates][longitude]">
        </div>

        <!-- College Website -->
        <div>
            <label for="collegewebsite">College Website</label>
            <input type="url" id="collegewebsite" name="college[collegewebsite]">
        </div>

        <!-- Contact Information -->
        <div>
            <label for="email">Email</label>
            <input type="email" id="email" name="college[contact][email]">
        </div>
        <div>
            <label for="phone">Phone</label>
            <input type="tel" id="phone" name="college[contact][phone]">
        </div>

        <!-- About -->
        <div>
            <label for="about">About</label>
            <textarea id="about" name="college[about]"></textarea>
        </div>

        <!-- Fee -->
        <div>
            <label for="fee">Fee</label>
            <input type="number" id="fee" name="college[fee]">
        </div>

        <!-- Courses -->
        <h3>Courses</h3>
        <div id="courses">
            <div class="course">
                <label for="coursename">Course Name</label>
                <input type="text" name="college[courses][0][coursename]" required>
                <label for="coursefee">Course Fee</label>
                <input type="text" name="college[courses][0][fee]">
                <label for="duration">Course Duration</label>
                <input type="text" name="college[courses][0][duration]">
                <label for="seats">Available Seats</label>
                <input type="number" name="college[courses][0][seats]">
            </div>
        </div>

        <button type="submit">Submit</button>
    </form>

    <script>
        // Add dynamic courses input if needed
        let courseCount = 1;
        function addCourse() {
            const coursesDiv = document.getElementById("courses");
            const newCourseDiv = document.createElement("div");
            newCourseDiv.classList.add("course");

            newCourseDiv.innerHTML = `
                <label for="coursename">Course Name</label>
                <input type="text" name="college[courses][${courseCount}][coursename]" required>
                <label for="coursefee">Course Fee</label>
                <input type="text" name="college[courses][${courseCount}][fee]">
                <label for="duration">Course Duration</label>
                <input type="text" name="college[courses][${courseCount}][duration]">
                <label for="seats">Available Seats</label>
                <input type="number" name="college[courses][${courseCount}][seats]">
            `;
            coursesDiv.appendChild(newCourseDiv);
            courseCount++;
        }
    </script>
</body>
</html>
